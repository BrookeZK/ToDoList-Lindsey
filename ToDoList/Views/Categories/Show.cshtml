@using ToDoList.Models;

<h3>Here are all the items in this category:</h3>

<ol>

@foreach (Item item in @Model.GetItems())
{
  <li><a href='/categories/@Model.GetId()/items/@item.GetId()'>@item.GetDescription()</a></li>
}
</ol>

<p><a href='/categories/@Model.GetId()/items/new'>Add a new item</a></p>
<p><a href='/categories'>Return to category list</a></p>
<p><a href='/'>Return to Main Page</a></p>
